<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewPrice"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="155dp"
        android:layout_marginRight="155dp"
        android:text="TextView"
        android:textSize="16dp" />

    <Button
        android:id="@+id/incBtn"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/textViewName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="+" />

    <Button
        android:id="@+id/decBtn"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/textViewName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:text="-" />

    <TextView
        android:id="@+id/qtyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/incBtn"
        android:text="1" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="101dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/decBtn"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="10dp"
        android:background="#c52502"
        android:text="delete"
        android:textColor="#ffffff" />

</RelativeLayout>